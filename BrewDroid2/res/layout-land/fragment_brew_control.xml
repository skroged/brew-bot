<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <HorizontalScrollView
        android:id="@+id/scroller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:id="@+id/mainThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/bkLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="BK" />

                <TextView
                    android:id="@+id/bkTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="110°" />

                <TextView
                    android:id="@+id/bkFlameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="130 FU" />

                <TextView
                    android:id="@+id/bkVolumeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="3.5 Gal" />

                <RelativeLayout
                    android:id="@+id/bkBurnerButton"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp" >

                    <com.brew.brewdroid.OnOffIndicator
                        android:id="@+id/bkBurnerIndicator"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Burner" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bkPumpButton"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="3dp" >

                    <com.brew.brewdroid.OnOffIndicator
                        android:id="@+id/bkPumpIndicator"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Pump" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/bkFermButton"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:padding="3dp" >

                        <com.brew.brewdroid.OnOffIndicator
                            android:id="@+id/bkFermIndicator"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Transfer" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/bkBkButton"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:padding="3dp" >

                        <com.brew.brewdroid.OnOffIndicator
                            android:id="@+id/bkBkIndicator"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Recirc" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mltLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/bkLayout"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/bkLayout"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nameTextt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="MLT" />

                <TextView
                    android:id="@+id/mltTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="110°" />

                <TextView
                    android:id="@+id/mltFlameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="130 FU" />

                <TextView
                    android:id="@+id/mltVolumeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="" />

                <RelativeLayout
                    android:id="@+id/mltBurnerButton"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp" >

                    <com.brew.brewdroid.OnOffIndicator
                        android:id="@+id/mltBurnerIndicator"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Burner" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mltPumpButton"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="3dp" >

                    <com.brew.brewdroid.OnOffIndicator
                        android:id="@+id/mltPumpIndicator"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Pump" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/mltBkButton"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:padding="3dp" >

                        <com.brew.brewdroid.OnOffIndicator
                            android:id="@+id/mltBkIndicator"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Transfer" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mltMltButton"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:padding="3dp" >

                        <com.brew.brewdroid.OnOffIndicator
                            android:id="@+id/mltMltIndicator"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Recirc" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hltLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/mltLayout"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/mltLayout"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nameTextt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="HLT" />

                <TextView
                    android:id="@+id/hltTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="110°" />

                <TextView
                    android:id="@+id/hltFlameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="130 FU" />

                <TextView
                    android:id="@+id/hltVolumeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="3.5 Gal" />

                <RelativeLayout
                    android:id="@+id/hltBurnerButton"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp" >

                    <com.brew.brewdroid.OnOffIndicator
                        android:id="@+id/hltBurnerIndicator"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Burner" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/hltPumpButton"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="3dp" >

                    <com.brew.brewdroid.OnOffIndicator
                        android:id="@+id/hltPumpIndicator"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Pump" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/hltMltButton"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:padding="3dp" >

                        <com.brew.brewdroid.OnOffIndicator
                            android:id="@+id/hltMltIndicator"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Transfer" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hltHltButton"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:padding="3dp" >

                        <com.brew.brewdroid.OnOffIndicator
                            android:id="@+id/hltHltIndicator"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Recirc" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/connectedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Connected" />

     <TextView
        android:id="@+id/fermTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connectedText"
        android:layout_marginLeft="10dp"
        android:text="110°" />
     
    <RelativeLayout
        android:id="@+id/fillButton"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_below="@+id/fermTempText"
        android:layout_gravity="center_horizontal"
        android:padding="3dp" >

        <com.brew.brewdroid.OnOffIndicator
            android:id="@+id/fillIndicator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Fill" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chillButton"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_below="@+id/fillButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:padding="3dp" >

        <com.brew.brewdroid.OnOffIndicator
            android:id="@+id/chillIndicator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Chill" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/igniterButton"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_below="@+id/chillButton"
        android:padding="3dp" >

        <com.brew.brewdroid.OnOffIndicator
            android:id="@+id/igniterIndicator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Igniter" />
    </RelativeLayout>

    <TextView
        android:id="@+id/permissionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/connectedText"
        android:text="Permission:" />

    <TextView
        android:id="@+id/pingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:text="Ping: 30ms" />

    <TextView
        android:id="@+id/boxTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pingText"
        android:layout_marginRight="10dp"
        android:text="110°" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:indeterminate="true" />

</RelativeLayout>